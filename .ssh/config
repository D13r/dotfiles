Host *
    Compression yes
    ServerAliveInterval 15

    # Reuse connections
    ControlMaster auto
    ControlPath ~/.ssh/control-master-%r@%h:%p
    ControlPersist 1m

    # Force it to use my key by default, not the Vagrant public key
    # Doesn't work on Git Bash
    #IdentityFile ~/.ssh/davejamesmiller.pub
    #IdentitiesOnly yes

    # Don't hash known hosts, it doesn't really add much security since
    # most hosts are also listed in this file and/or Bash history
    HashKnownHosts no

    # Automatically append .djm.me to hostnames with no dot
    CanonicalizeHostname yes
    CanonicalizeMaxDots 0
    CanonicalDomains djm.me

Host localhost
    ForwardAgent yes

Host *.djm.me
    User dave
    ForwardAgent yes

Host r roxy roxy.djm.me
    # IP because some routers block local IP resolution
    Hostname 192.168.5.2
    User dave
    ForwardAgent yes
    ForwardX11 yes
    ForwardX11Trusted yes


Host ddp daydreamerphotos.com
    Hostname daydreamerphotos.com
    User daydream

Host mddp my.daydreamerphotos.com
    Hostname my.daydreamerphotos.com
    User mydaydre
